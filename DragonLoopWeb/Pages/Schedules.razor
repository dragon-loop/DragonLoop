@page "/schedules"
@using DragonLoopViewModels.ViewModels
@using DragonLoopModels
@using Microsoft.AspNetCore.Components;
@inject NavigationManager MyNavigationManager

<h1>Schedules</h1>

@if (scheduleViewModel.Schedules == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <select @onchange="eventArgs => { SelectRoute(scheduleViewModel.Routes.Last(), eventArgs.Value); }">
        @foreach (var route in scheduleViewModel.Routes)
        {
            <option value=@route>@route.Name</option>
        }
    </select>
    <table class="table">
        <thead>
            <tr>
                @foreach (var stop in scheduleViewModel.SelectedRoute.Stops)
                {
                    <th>@stop.Name</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var schedules in scheduleViewModel.Schedules)
            {
                <tr>
                    @foreach (var schedule in schedules)
                    {
                        <td>@schedule.ExpectedTime.ToString("hh\\:mm")</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private ScheduleViewModel scheduleViewModel;

    protected override async Task OnInitializedAsync()
    {
        scheduleViewModel = new ScheduleViewModel("localhost");
        await scheduleViewModel.LoadRoutes();
        await scheduleViewModel.SetSelectedRoute(scheduleViewModel.Routes.First());
    }

    private void SelectRoute(object Route, object e)
    {
        var route = Route as Route;
        Console.WriteLine(route.Name);
        scheduleViewModel.SetSelectedRoute(route);
    }
}
